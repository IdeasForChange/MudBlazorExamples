@using EnterpriseApp.Components.Code
@using MudBlazor
@inject DateStateService DateStateService

<MudDatePicker 
    @bind-Date="DateStateService.SelectedDate" 
    Label="Select Date" 
    Variant="Variant.Outlined"
    Margin="Margin.Dense"
    ShowToolbar="false" />

@code {
    protected override Task OnInitializedAsync()
    {
        if (DateStateService.SelectedDate == null || DateStateService.SelectedDate == DateTime.MinValue)
        {
            DateStateService.SelectedDate = DateTime.Now.AddDays(-1);
        }

        return base.OnInitializedAsync();
    }
}